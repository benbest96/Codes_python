class WebSite:
    def __init__(self, title, url):
        self.title = title
        self.url = url
        self.content = []

    def showTitle(self):
        print(self.title)

    def showUrl(self):
        print(self.url)

    def addContent(self, content):
        self.content.append(content)

    def __repr__(self):
        return f"The website ({self.title}, {self.url})"

    def showContent(self):
        print("The added contents are:\n")
        for i in self.content:
            print(f"\t -{i}")

facebook = WebSite("Website of FACEBOOK ","www.facebook.com")
facebook.addContent("Profil")
facebook.addContent("pictures")
facebook.addContent("About me")
facebook.showContent()
facebook.showTitle()
facebook.showUrl()
facebook.__repr__()

print(f"\n The {facebook.title} is on the following link: \n\t\t <<{facebook.url}>>")
