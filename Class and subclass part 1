class SiteWeb:
    
    def __init__(self, title, url):
        self.title = titlee
        self.url = url
        self.contenu = []
    
    def afficherTitle(self):
        print(self.title)

    def afficherUrl(self):
        print(self.url)

    def addContent(self, c):
        self.content.append(c)

    def __repr__(self):
        return f"WebSite({self.title}, {self.url})"
    
    # Supplémentaire
    def afficherContent(self):
        print("les contenus ajoutés sont: \n")
        for i in self.content:
            print (f"\t -{i}")

